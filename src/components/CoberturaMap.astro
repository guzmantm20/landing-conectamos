---
// CoberturaMap.astro
// Datos por defecto si no se pasan por props
const zonas = [
  {
    lat: 6.146328674502555,
    lng: -72.57046133467526,
  },
  {
    lat: 6.1544135,
    lng: -72.5463928,
  },
  {
    lat: 6.186638726150199,
    lng: -72.47281167542558,
  },
]
---

<link
  rel='stylesheet'
  href='https://unpkg.com/leaflet@1.9.4/dist/leaflet.css'
  integrity='sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY='
  crossorigin=''
/>

<div class='relative w-full group'>
  <div
    id='cobertura-map'
    class='w-full h-175 rounded-3xl shadow-2xl border-4 border-white overflow-hidden z-0'
  >
  </div>
</div>

<script define:vars={{ zonas }}>
  // Esta función se ejecutará en el navegador
  async function initMap() {
    // Importamos Leaflet de forma dinámica para evitar errores de SSR
    const L =
      await import('https://unpkg.com/leaflet@1.9.4/dist/leaflet-src.esm.js')

    // Configuración de iconos (Leaflet a veces pierde las rutas de los iconos por defecto)
    const defaultIcon = L.icon({
      iconUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-icon.png',
      shadowUrl:
        'https://unpkg.com/leaflet@1.9.4/dist/images/marker-shadow.png',
      iconSize: [25, 41],
      iconAnchor: [12, 41],
      popupAnchor: [1, -34],
    })

    // Centro inicial (Jericó aproximadamente)
    const map = L.map('cobertura-map', {
      scrollWheelZoom: false,
      zoomControl: true,
    }).setView([6.16, -72.53], 11)

    // Capa de mapa (OpenStreetMap) con un filtro visual más limpio
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap',
      maxZoom: 19,
    }).addTo(map)

    // Crear un grupo para ajustar la vista automáticamente
    const markers = []

    zonas.forEach((z) => {
      const marker = L.marker([z.lat, z.lng], { icon: defaultIcon }).addTo(map)
        .bindPopup(`
          <div style="font-family: sans-serif;">
            <strong style="color: #0E74CE;">${z.nombre}</strong><br>
            <span style="font-size: 12px; color: #666;">${z.detalle}</span>
          </div>
        `)
      markers.push(L.marker([z.lat, z.lng]))
    })

    // Ajustar el zoom para que se vean todos los puntos
    if (markers.length > 0) {
      const group = L.featureGroup(markers)
      map.fitBounds(group.getBounds().pad(0.5))
    }
  }

  // Ejecutar cuando el DOM esté listo
  initMap()
</script>

<style>
  /* Asegura que el mapa siempre tenga dimensiones */
  #cobertura-map {
    background-color: #f8fafc;
  }

  /* Arreglo para que el popup se vea más profesional */
  :global(.leaflet-popup-content-wrapper) {
    border-radius: 12px !important;
    padding: 4px !important;
  }
  :global(.leaflet-popup-tip) {
    background: white !important;
  }
</style>
